    <% else %>
      <li> 
        <%= link_to 'Iniciar', new_user_session_path %> 
      </li>
      <li> 
        <%= link_to 'Registrarme', new_user_registration_path %> 
      </li>
    <% end %> 

  </ul>



    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
