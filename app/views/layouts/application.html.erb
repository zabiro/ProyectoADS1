    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <ul class="menu align-right">

    <%- if user_signed_in? %>
      <li> 
        <%= link_to 'salir', destroy_user_session_path, method: :delete %> 
